{
    "name": "limitless/scrud",
    "description": "Simple Laravel Default CRUD",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Zheng Haowei",
            "email": "zhenghaowei88@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "limitless\\scrud\\" : "src/"
        }
    },
    "require": {
        "php": "^7.1",
        "illuminate/auth": "^5.2|^6|^7",
        "illuminate/contracts": "^5.2|^6|^7",
        "illuminate/http": "^5.2|^6|^7",
			  "illuminate/support": "5.0 - 5.8 | ^6.0 | ^7.0"
		},
    "require-dev": {
        "illuminate/console": "^5.2|^6|^7",
        "illuminate/database": "^5.2|^6|^7",
        "illuminate/routing": "^5.2|^6|^7",
        "mockery/mockery": ">=0.9.9",
        "phpunit/phpunit": "^6.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "limitless\\scrud\\Providers\\ScrudServiceProvider"
            ]
        }
    },
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --colors=always",
        "test:ci": "composer test -- --verbose --coverage-text --coverage-clover=coverage.xml"
    }
}
